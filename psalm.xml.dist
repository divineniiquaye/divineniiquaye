<?xml version="1.0"?>
<psalm xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns="https://getpsalm.org/schema/config"
       name="Psalm for Flight Routing"
       useDocblockTypes="true"
       errorLevel="3"
       strictBinaryOperands="false"
       rememberPropertyAssignmentsAfterCall="true"
       checkForThrowsDocblock="false"
       throwExceptionOnError="0"
       ensureArrayStringOffsetsExist="true"
       ensureArrayIntOffsetsExist="false"
       resolveFromConfigFile="true"
       xsi:schemaLocation="https://getpsalm.org/schema/config vendor/vimeo/psalm/config.xsd"
>
    <projectFiles>
        <directory name="src"/>
        <ignoreFiles>
            <directory name="vendor"/>
        </ignoreFiles>
    </projectFiles>

    <issueHandlers>
        <LessSpecificImplementedReturnType errorLevel="suppress"/>

        <InvalidArgument>
            <errorLevel type="suppress">
                <referencedFunction name="Flight\Routing\Middlewares\MiddlewareDispatcher::pipeline"/>
            </errorLevel>
        </InvalidArgument>

        <PossiblyNullArgument>
            <errorLevel type="suppress">
                <referencedFunction name="Psr\Http\Message\ResponseInterface::withAddedHeader"/>
            </errorLevel>
        </PossiblyNullArgument>

        <PossiblyUndefinedStringArrayOffset>
            <errorLevel type="suppress">
                <file name="src/Route.php"/>
                <file name="src/Services/SimpleRouteCompiler.php"/>
            </errorLevel>
        </PossiblyUndefinedStringArrayOffset>
    </issueHandlers>
</psalm>
